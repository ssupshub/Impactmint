# Application
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/impactmint

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=302e020100300506032b65700422042000000000000000000000000000000000
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# IPFS Configuration (Optional - for NFT metadata storage)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your-ipfs-api-key-here
IPFS_PROJECT_SECRET=your-ipfs-project-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Redis (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@impactmint.io

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Guardian Configuration
GUARDIAN_API_URL=http://localhost:3002
GUARDIAN_OPERATOR_ID=0.0.YOUR_GUARDIAN_OPERATOR_ID
GUARDIAN_OPERATOR_KEY=302e020100300506032b65700422042000000000000000000000000000000000
GUARDIAN_STANDARD_REGISTRY_DID=did:hedera:testnet:YOUR_REGISTRY_DID
GUARDIAN_STANDARD_REGISTRY_KEY=302e020100300506032b65700422042000000000000000000000000000000000
GUARDIAN_ACCESS_TOKEN_SECRET=guardian-access-secret-change-in-production
GUARDIAN_REFRESH_TOKEN_SECRET=guardian-refresh-secret-change-in-production
GUARDIAN_INITIALIZATION_TOPIC_ID=

# Guardian IPFS Configuration
GUARDIAN_IPFS_STORAGE_API_KEY=your-web3-storage-api-key
GUARDIAN_IPFS_NODE_URL=http://localhost:5001

# Guardian Webhook Configuration
GUARDIAN_WEBHOOK_SECRET=your-webhook-secret-change-in-production
GUARDIAN_WEBHOOK_ENABLED=true

# Guardian Sync Worker Configuration
GUARDIAN_SYNC_INTERVAL=30000
GUARDIAN_RETRY_MAX_ATTEMPTS=3
GUARDIAN_RETRY_DELAY=5000

# ============================================
# NFT MINTING CONFIGURATION
# ============================================

# Hedera NFT Treasury Configuration
NFT_TREASURY_ACCOUNT_ID=0.0.YOUR_TREASURY_ID
NFT_TREASURY_PRIVATE_KEY=302e020100300506032b657004220420...
NFT_SUPPLY_KEY=302e020100300506032b657004220420...

# IPFS Configuration for NFT Metadata
IPFS_PROVIDER=pinata
IPFS_API_KEY=your-pinata-api-key
IPFS_API_SECRET=your-pinata-api-secret
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# NFT Collection IDs (set after creation)
NFT_COLLECTION_REC=0.0.TOKEN_ID
NFT_COLLECTION_REDD=0.0.TOKEN_ID
NFT_COLLECTION_OPR=0.0.TOKEN_ID

# NFT Minting Worker Configuration
NFT_MINTING_INTERVAL=60000
NFT_AUTO_MINT_ENABLED=true

# Treasury Monitor Configuration
TREASURY_MONITOR_INTERVAL=3600000
TREASURY_ALERT_THRESHOLD=10
TREASURY_AUTO_REFILL=false

# Hedera Mirror Node
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Certificate Generation
CERTIFICATE_TEMPLATE_PATH=./templates/certificates
CERTIFICATE_LOGO_PATH=./assets/logo.png
